<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hold_em_table"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context="com.andyisdope.headsuppoker.Activities.RazzTable">

    <FrameLayout
        android:id="@+id/ChatSpace"
        android:layout_width="250dp"
        android:layout_height="65dp">

        <TextView
            android:layout_width="250dp"
            android:id="@+id/MessageHistory"
            tools:maxLines="15"
            android:scrollbars="vertical"
            android:layout_height="match_parent"
            android:gravity="top"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:verticalScrollbarPosition="left" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/ButtonSpace"
        android:layout_gravity="bottom"
        android:layout_height="50dp">

        <Button
            android:id="@+id/BtnCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:text="@string/Check" />

        <Button
            android:id="@+id/BtnBet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="350dp"
            android:text="@string/Bet" />

        <Button
            android:id="@+id/BtnFold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:text="@string/Fold" />

        <Button
            android:id="@+id/BtnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:text="@string/Call"
            android:textSize="12sp" />

        <Button
            android:id="@+id/BtnRaise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="350dp"
            android:text="@string/Raise" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/InfoSpace"
        android:layout_marginStart="250dp"
        android:layout_width="250dp"
        android:layout_height="65dp">

        <TextView
            android:layout_height="match_parent"
            android:id="@+id/TableInfo"
            android:layout_width="155dp"
            android:gravity="center" />

        <Button
            android:text="@string/LeaveSeat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/LeaveSeat"
            android:layout_marginStart="155dp" />

        <Button
            android:text="@string/TakeSeat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/TakeSeat"
            android:layout_marginStart="155dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RoomText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RoomDeets"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/StakesText"
            android:layout_marginTop="30dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_marginStart="500dp"
        android:layout_width="93dp"
        android:id="@+id/MenuSpace"
        android:layout_height="65dp">

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/TableSpace"
        android:layout_marginTop="65dp"
        android:focusableInTouchMode="true"
        android:layout_height="245dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blackjackfelt"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/Pot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="115dp"
                android:background="@color/OpaqueBlack"
                android:textColor="@android:color/background_light" />

            <FrameLayout
                android:id="@+id/SeatTwo"
                android:layout_width="255dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/MessageBox">

                <ImageView
                    android:id="@+id/Seat2Card6"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="@string/Card" />

                <ImageView
                    android:id="@+id/Seat2Card5"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="@string/Card" />

                <ImageView
                    android:id="@+id/Seat2Card4"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="@string/Card" />

                <ImageView
                    android:id="@+id/Seat2Card3"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="@string/Card" />

                <ImageView
                    android:id="@+id/Seat2Card2"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/Card" />

                <ImageView
                    android:id="@+id/Seat2Card1"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/Card" />

                <ImageView
                    android:id="@+id/Seat2Card7"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/Card" />

                <FrameLayout
                    android:id="@+id/Seat2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="35dp">

                    <TextView
                        android:id="@+id/Seat2Name"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:background="@color/OpaqueBlack"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/Seat2ChipAction"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_marginTop="33dp"
                        android:background="@color/OpaqueBlack"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp" />
                </FrameLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/SeatOne"
                android:layout_width="255dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/SeatTwo">

                <ImageView
                    android:id="@+id/Seat1Card6"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/Card" />

                <ImageView
                    android:id="@+id/Seat1Card5"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/Card" />

                <ImageView
                    android:id="@+id/Seat1Card4"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/Card" />

                <ImageView
                    android:id="@+id/Seat1Card3"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/Card" />

                <ImageView
                    android:id="@+id/Seat1Card2"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="0dp"
                    android:contentDescription="@string/Card" />

                <ImageView
                    android:id="@+id/Seat1Card1"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="30dp"
                    android:contentDescription="@string/Card" />

                <ImageView
                    android:id="@+id/Seat1Card7"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="@string/Card" />

                <FrameLayout
                    android:id="@+id/Seat1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="35dp">

                    <TextView
                        android:id="@+id/Seat1Name"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:background="@color/OpaqueBlack"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/Seat1ChipAction"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_marginTop="33dp"
                        android:background="@color/OpaqueBlack"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp" />

                </FrameLayout>

            </FrameLayout>

            <EditText
                android:id="@+id/MessageBox"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:hint="@string/Message"
                android:imeOptions="actionDone|flagNoExtractUi"
                android:inputType="text"
                android:textAlignment="viewStart"
                android:textSize="12sp">

            </EditText>

            <ImageView
                android:id="@+id/Seat1Dealer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/SeatTwo"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="145dp"
                android:layout_marginStart="145dp"
                android:contentDescription="@string/Card"
                android:visibility="invisible"
                app:srcCompat="@mipmap/dealerbtn" />

            <ImageView
                android:id="@+id/Seat2Dealer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="70dp"
                android:layout_marginStart="430dp"
                android:contentDescription="@string/Card"
                android:visibility="invisible"
                app:srcCompat="@mipmap/dealerbtn" />

            <Button
                android:id="@+id/PostBlindBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:elevation="0dp"
                android:text="@string/PostBlind"
                android:visibility="gone" />

            <Button
                android:id="@+id/RemoveBlindBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:elevation="0dp"
                android:text="@string/RemoveBlind"
                android:visibility="gone" />

            <TextView
                android:id="@+id/HandStrength"
                android:layout_width="125dp"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/MessageBox"
                android:layout_alignBottom="@+id/MessageBox"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </FrameLayout>

</merge>

